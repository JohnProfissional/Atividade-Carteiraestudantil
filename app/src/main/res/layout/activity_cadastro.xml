<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imagesbackground9"
    tools:context=".CadastroActivity">


    <TextView
        android:id="@+id/idcadastro"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="80dp"
        android:backgroundTint="@color/teal_200"
        android:gravity="center"
        android:text="Cadastro"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="26sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/idUsername"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/idcadastro"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/holo_blue_dark"
        android:drawableLeft="@drawable/ic_baseline_person_pin_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:textColorHighlight="@color/teal_700"
        android:textColorHint="@color/black"
        android:textColorLink="@color/teal_700" />

    <EditText
        android:id="@+id/idEmail"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/idUsername"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/holo_blue_dark"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/idSenha"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/idEmail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/holo_blue_dark"
        android:drawableLeft="@drawable/ic_baseline_visibility_off_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textColorHint="@color/black" />

    <ImageView
        android:id="@+id/idImagefacebook"
        android:layout_width="79dp"
        android:layout_height="60dp"
        android:layout_below="@id/idButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        app:srcCompat="@drawable/facebook" />

    <ImageView
        android:id="@+id/idImageinstagram"
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:layout_below="@id/idButton"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        app:srcCompat="@drawable/instagram" />

    <ImageView
        android:id="@+id/idImagegoogle"
        android:layout_width="236dp"
        android:layout_height="62dp"
        android:layout_below="@id/idButton"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="200dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        app:srcCompat="@drawable/google" />

    <Button
        android:id="@+id/idButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idSenha"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="40dp"
        android:background="@android:color/holo_blue_dark"
        android:onClick="cadastrar"
        android:hint="Cadastrar"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:iconPadding="10dp" />

</RelativeLayout>

